<h2 class='text-center fs-3'>Log in</h2>
<div class='text-center container'>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email',class:'mb-2' , class: 'form-control'%><br>
    <%= f.password_field :password, autocomplete: "current-password",placeholder:'Password' ,class:'mb-1', class: 'form-control'%><br>
  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me,class:'checkbox fs-4' %>
      <%= f.label :remember_me %>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in",class:'btn btn-dark' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>